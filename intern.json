{
  "browser": { "suites": "dist/salte-auth.js" },
  "configs": {
    "coverage": {
      "reporters": [{
        "name": "runner",
        "options": {
            "hidePassed": true
        }
      }, "lcov"],
      "environments": [{
        "browserName": "chrome",
        "goog:chromeOptions": {
          "args": ["headless", "disable-gpu", "window-size=1024,768"]
        }
      }]
    },
    "ci": {
      "reporters": [{
        "name": "runner",
        "options": {
            "hidePassed": true
        }
      }],
      "bail": true,
      "tunnel": "browserstack",
      "environments": [
        { "browserName": "chrome", "version": "latest", "fixSessionCapabilities": "no-detect" },
        { "browserName": "chrome", "version": "latest-1", "fixSessionCapabilities": "no-detect" },
        { "browserName": "safari", "version": "latest", "fixSessionCapabilities": "no-detect" },
        { "browserName": "safari", "version": "latest-1", "fixSessionCapabilities": "no-detect" },
        { "browserName": "firefox", "version": "latest", "fixSessionCapabilities": "no-detect" },
        { "browserName": "firefox", "version": "latest-1", "fixSessionCapabilities": "no-detect" },
        { "browserName": "edge", "version": "latest", "fixSessionCapabilities": "no-detect" },
        { "browserName": "edge", "version": "latest-1", "fixSessionCapabilities": "no-detect" },
        { "browserName": "ie", "version": "11", "fixSessionCapabilities": "no-detect" }
      ]
    }
  }
}
